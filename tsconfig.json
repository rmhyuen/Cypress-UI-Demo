{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@support/*": ["../cypress/support/*"],
      "@fixtures": ["../cypress/fixtures/*"],
      "@pages": ["../cypress/support/pages/*"]
    },
    "types": ["cypress", "cypress-map"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "cypress/e2e/*.js", 
    "cypress/e2e/*.ts",
    "cypress/support/*.ts",
    "cypress/**/*",
    "fixtures/**/*"
  ]
}